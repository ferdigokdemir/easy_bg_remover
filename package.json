{
  "name": "easy-bg-remover",
  "version": "1.0.0",
  "description": "A simple Electron app to remove backgrounds from images using AI",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [
    "electron",
    "background-removal",
    "image-processing",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "@imgly/background-removal-node": "^1.4.5"
  },
  "build": {
    "appId": "com.easybgremover.app",
    "productName": "Easy BG Remover",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.graphics-design"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
